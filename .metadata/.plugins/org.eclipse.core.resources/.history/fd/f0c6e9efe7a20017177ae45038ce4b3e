    <file:connector name="File" autoDelete="false" streaming="true" validateConnections="true" doc:name="File"/>
    <flow name="mas-edenredFlow" processingStrategy="synchronous">
        <enricher doc:name="Message Enricher">
            <flow-ref name="mas-edenred-StartSync" doc:name="mas-edenred-StartSync"/>
        </enricher>
        <custom-transformer class="sima.utils.SFTPinJava" doc:name="Java"/>
        <logger message="#[payload.size()]" level="INFO" doc:name="Logger"/>
        <foreach doc:name="For Each">
            <expression-component doc:name="Expression"><![CDATA[if(!payload.endsWith('.csv'))
{
	payload = null;
}]]></expression-component>
            <choice doc:name="Choice">
                <when expression="#[payload != null]">
                    <custom-transformer class="sima.utils.ReaderCSV" doc:name="Java"/>
                    <dw:transform-message doc:name="Transform Message" metadata:id="cdad1c36-c802-4895-af23-1f1b1a66244e">
                        <dw:input-payload doc:sample="C:\Users\jflormun\Documents\2017-09-08-001-030-62170-030.csv" mimeType="application/java"/>
                        <dw:set-payload><![CDATA[%dw 1.0
%output application/java
---
payload map ((payload01 , indexOfPayload01) -> {
	//Name: payload01.idTransaccion,
	//aib__Agency__c: payload01.region,
	aib__Card__c: payload01.tarjeta,
	aib__Distance__c: payload01.recorrido as :number default 0,
	aib__Driver_Code__c: payload01.codigoChofer,
	aib__Driver_Name__c: payload01.nombreChofer,
	aib__Fuel_Station__c: payload01.estacion,
	//aib__Fuel_Type__c: payload01.tipoCombustible,
	aib__Grand_Total__c: payload01.importeTotal,
	aib__License_Plate__c: payload01.placa,
	aib__Make__c: payload01.marca,
	aib__Odometer__c: payload01.odometro as :number default 0,
	aib__Performance__c: payload01.rendimiento as :number default 0,
	//aib__Posted_Date__c: payload01.fecha as :datetime,
	aib__Prev_Odometer__c: payload01.kilometrajeAnterior as :number default 0,
	aib__Previous_Balance__c: payload01.saldoAnterior,
	aib__Station_Code__c: payload01.codigoPemex,
	aib__Std_Performance__c: payload01.rendimientoStandar as :number default 0,
	aib__Subtotal__c: payload01.importe,
	aib__Tank_Capacity__c: payload01.capacidadTanque as :number default 0,
	aib__Tax__c: payload01.IVA,
	aib__Type__c: payload01.tipodeTransaccion,
	aib__Unit_Price__c: payload01.precioUnidad,
	aib__Units__c: payload01.volumen as :number default 0
})]]></dw:set-payload>
                    </dw:transform-message>
                    <foreach batchSize="200" doc:name="For Each">
                        <sfdc:create config-ref="Salesforce_Authentication" type="aib__Fuel_Trx__c" doc:name="Salesforce">
                            <sfdc:objects ref="#[payload]"/>
                        </sfdc:create>
                        <logger message="#[flowVars.counter]" level="INFO" doc:name="Logger"/>
                    </foreach>
                </when>
                <otherwise>
                    <logger level="INFO" doc:name="Logger"/>
                </otherwise>
            </choice>

        </foreach>
        
        	<choice-exception-strategy doc:name="Choice Exception Strategy">
		<catch-exception-strategy
			when="#[exception.causedBy(java.net.ConnectException)]" doc:name="Connect Exception Strategy">
			<logger level="ERROR" message="Connect Exception: #[exception.message]."
				doc:name="Logger" />
		</catch-exception-strategy>
		<catch-exception-strategy
			when="#[exception.causedBy(java.io.IOException)]" doc:name="IO Exception Strategy">
			<logger level="ERROR" message="IO Exception: #[exception.message]."
				doc:name="Logger" />
		</catch-exception-strategy>
	</choice-exception-strategy>
    </flow>
    <flow name="mas-edenred-StartSync">
        <dw:transform-message doc:name="Transform Message">
            <dw:set-payload><![CDATA[%dw 1.0
%output application/java
---
{
	aib__started_at__c: now
}]]></dw:set-payload>
        </dw:transform-message>
        <sfdc:create-single config-ref="Salesforce_Authentication" type="aib__Fuel_Sync__c" doc:name="Salesforce"/>
        <set-payload value="#[payload.id]" doc:name="Set Payload"/>
    </flow>
    <flow name="mas-edenred-UpdateSync">
        <dw:transform-message doc:name="Transform Message">
            <dw:set-payload><![CDATA[%dw 1.0
%output application/java
---
{
	Id: null,
	aib__status__c: null,
	aib__synced_at__c: now
}]]></dw:set-payload>
        </dw:transform-message>
        <sfdc:update-single config-ref="Salesforce_Authentication" type="aib__Fuel_Sync__c" doc:name="Salesforce"/>
        <logger message="#[payload]" level="INFO" doc:name="Logger"/>
    </flow>

</mule>
