    <flow name="mas-jobs-getStock">
        <poll doc:name="Poll">
            <schedulers:cron-scheduler expression="0 0 0/3 * * ? *"/>
            <logger message="#['Inicia Inventario']" level="INFO" doc:name="Logger"/>
        </poll>
        <expression-component doc:name="lock processing to avoid two syncs occurring at the same time"><![CDATA[app.registry['PollSynchronizer'].lock();]]></expression-component>
        <flow-ref name="mas-stockFlow" doc:name="mas-stockFlow"/>
        <expression-component doc:name="unlock processing"><![CDATA[#[app.registry['PollSynchronizer'].unlock()]]]></expression-component>
        <logger message="#['Finaliza Inventario']" level="INFO" doc:name="Logger"/>
    </flow>
